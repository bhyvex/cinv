# Load the configuration - this script should be sourced
#

# where our database can be found
sexy_db="${sexy_db:-$HOME/.sexy}"

# pathnames for objects
: ${sexy_path_tags:="tags"}
: ${sexy_path_hosts:="hosts"}
: ${sexy_path_networks="networks"}

sexy_db="${sexy_db:-$HOME/.sexy}"
# If there are more types, create an eval loop to create db entries
sexy_db_hosts="${sexy_db}/${sexy_path_hosts}"
sexy_db_networks="${sexy_db}/${sexy_path_networks}"

# what who cares about
sexy_object_types="${sexy_path_hosts} ${sexy_path_networks}"

sexy_runner_known="${sexy_path_hosts}"

usage()
{
   echo "${__myname}: $@"
   exit 0
}

