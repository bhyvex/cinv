#!/bin/sh
#
# FIXME: update these docs
#
# I'm the sexy command.
#
# sexy <context> add|del|get|set|help|<action> <id> [--property value]
#
# I am just a wrapper, I'm only usefull together with my plugins which 
# extend my functionality like so:
# ./plugins/<context>/extend/<myname>/<action>
#
# Each of my plugins inherits my generic add, del, get and set actions
# for interacting with my cconfig db.
#
# Each of my plugins also inherits my generic help action which presents
# the help for usage of the plugin in a uniform consistent way.
#
# e.g.
#  $ sexy network get 129.132.186.0
#  runs: ./libexec/get
#  $ sexy network whatever
#  runs: ./plugins/network/extend/sexy/whatever
#

. sexy-config

. sexy-args -atleast plugin action -- "$@"

__sexy_plugin_dir=$(__sexy_find_plugin_dir "$plugin")
[ -d "$__sexy_plugin_dir" ] || __sexy_exit_err "Plugin not found: $plugin"
export __sexy_plugin_dir

export __sexy_plugin_name="$plugin"
export __sexy_plugin_action="$action"

case $action in
   help)
      __sexy_command_abs="$__sexy_base_dir/$__sexy_name_libexec/$action"
      ;;
   *)
      __sexy_command_abs="$__sexy_plugin_dir/$__sexy_name_libexec/$action"
      ;;
esac

[ -e "$__sexy_command_abs" ] || __sexy_exit_err "Command not found: $__sexy_command_abs"
[ -x "$__sexy_command_abs" ] || __sexy_exit_err "Command not executable: $__sexy_command_abs"

export __sexy_command_abs

# Change to plugin dir before executing the plugin action
cd "$__sexy_plugin_dir"
$__sexy_command_abs "$@"

