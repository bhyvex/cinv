set -e

. "$(which sexy-config-load)"

#for network in $(sexy-list networks); do
for sexy_network in 172.25.0.0; do
   #ipa="$(sexy-config-get networks "$network" ipa_backend)

   ipa=/home/users/nico/.sexy/backends/ipa/eth-id-bd-svn

   "${ipa}/open" "$sexy_network"

   for sexy_host in $(sexy_list_hosts "${sexy_network}"); do
      "${ipa}/write" "$sexy_network" "$sexy_host"
   done
   "${ipa}/close" "$sexy_network"
#   ${ipa}/commit $sexy_network
done

exit 0
