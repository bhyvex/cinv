# Make sure all hosts exists in the external databases, as we like it!
#
#

set -e

. "$(which sexy-config-load)"

for network in $(sexy-list-objects networks); do
   echo Configuring network $network ...
   ipa_default="$(sexy_type_config_get backends ipa-default)"
   ipa="$sexy_db_backends/$ipa_default"

   "${ipa}/open" "$sexy_network"
#   "${dns}/open" "$sexy_network"

   for sexy_host in $(sexy-attribute list "${sexy_network}"); do
      "${ipa}/write" "$sexy_network" "$sexy_host"
   

      ipv4a="$(sexy-attribute-get networks "$sexy_network" "$sexy_host/ipv4a")"
#      "${dns}/set-a+ptr" "$sexy_host" "$ipv4a"

#      aliases=$(sexy-attribute-get networks "$sexy_network" "$sexy_host/aliases")
#      for alias in $aliases; do
#         "${dns}/add-cname" "$sexy_host" $alias
#      done
   done
   "${ipa}/close" "$sexy_network"
#   "${ipa}/commit" $sexy_network
done

exit 0
