# Generic argument parsing and checking.
#
# Usage:
#  . sexy-args fqdn ipv4a -- "$@"
#  echo "${ipv4a}"
#
# Warning: arguments to source scripts is just a "valid extension" in posix!
# See http://pubs.opengroup.org/onlinepubs/009695399/utilities/dot.html

# Require some command line parameters and allow optional parameters
# -atleast: have at least the given number of arguments, but allow more to be present
# -exact: have exactly the given number of arguments
# -optional: allow arguments to be missing
# -skip: skip previously found arguments
__sexy_args_count=0
__sexy_args_list=""
__sexy_args_exact="exact"
__sexy_args_skip="1"

# get argument list
while [ "$#" -gt 0 ]; do
   case "$1" in
      # Only allow exact number of arguments (normally allow more)
      -atleast)
         __sexy_args_exact="atleast"
         shift
      ;;
      -exact)
         __sexy_args_exact="exact"
         shift
      ;;
      -optional)
         __sexy_args_exact="optional"
         shift
      ;;
      # Skip previously found parameters
      -skip)
         __sexy_args_skip="$(($__sexy_args_skip+$__sexy_args_next))"
         shift
      ;;
      -*)
         __sexy_exit_err "Unknown sexy argument"
         shift
      ;;
      *)
         break
      ;;
   esac
done

# get argument list
while [ "$1" != "--" ]; do
   eval arg_${__sexy_args_count}=\"$1\"
   # unset
   eval $1=""
   __sexy_args_list="$__sexy_args_list $1"
   shift
   __sexy_args_count=$(($__sexy_args_count+1))
done

# skip at the "--" or more args if -skip is specified
shift $__sexy_args_skip

# Need the exact number of arguments
if [ "${__sexy_args_exact}" = "exact" -a "$#" -ne "$__sexy_args_count" ]; then
   #__sexy_exit_err ${__sexy_args_list}
   __sexy_exit_err "Wrong number of arguments. Expected $__sexy_args_count, got $#"
# Need at least given number of arguments
elif [ "${__sexy_args_exact}" = "atleast" -a "$#" -lt "$__sexy_args_count" ]; then
   #__sexy_exit_err ${__sexy_args_list}
   __sexy_exit_err "Wrong number of arguments. Expected at least $__sexy_args_count, got $#"
fi

# assign values
export __sexy_args_next=0
while [ "$#" -gt 0 -a "$__sexy_args_next" -lt "${__sexy_args_count}" ]; do
   eval export \$arg_$__sexy_args_next=\"$1\"
   shift
   __sexy_args_next=$(($__sexy_args_next+1))
done

# remove assigned values from argument list
set -- "$@"

# cleanup
unset __sexy_args_count __sexy_args_list __sexy_args_exact __sexy_args_skip

# vim: set filetype=sh
