# List possible backends for chosen types
#

set -e

################################################################################
# standard vars stolen from cconf
__pwd="$(pwd -P)"
__mydir="${0%/*}"; __abs_mydir="$(cd "$__mydir" && pwd -P)"
__myname=${0##*/}; __abs_myname="$__abs_mydir/$__myname"

. "${__mydir}/sexy-config-load"

while [ $# -gt 0 ]; do
   backend_type="$1"; shift

   backend_dir="${sexy_db_backend}/${backend_type}"
   if [ -d "${backend_dir}" ]; then

   fi

   # go through all possible types
   for implementation in $sexy_object_types; do
      # path to object
      to="${type}/${object}"
      pto="${sexy_db}/${to}"

      # existing object?
      if [ -d "${pto}" ]; then
         # path to type object tags
         ptot="${pto}/${sexy_path_tags}"
         if [ -f "${pto}/${sexy_path_tags}" ]; then
            echo "${to}: $(echo $(cat "${ptot}"))"
         fi
      fi
   done
done

exit 0
