data/
   (backends|hosts|networks|etc)
      .config/
            general settings
      <id>/
         attribute
         .config/
            specific settings, overwriting general settings

   backends/
      .config
         default-ipa
         default-dns
      <backend-id>/
         <id>/
            .config
            id specific (?) plus needed (open,write,close,commit)

   hosts/
      <host-ids>/
         ipv4a
         aliases
            
   networks/
      <network-id>/
         <host-ids>
            
tmp/
